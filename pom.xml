<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

        <properties>
                <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
                <eclipse.dependency>true</eclipse.dependency>
        </properties>

        <modelVersion>4.0.0</modelVersion>
        <groupId>to.networld.scrawler</groupId>
        <artifactId>scrawler</artifactId>
        <version>0.1-SNAPSHOT</version>
        <packaging>jar</packaging>
        <url>http://scrawler.networld.to</url>
        <name>Networld Semantic Crawler</name>
        <description>SCrawler is a crawler that searches information from the
        Semantic Web</description>

        <organization>
                <name>Networld</name>
                <url>http://networld.to</url>
        </organization>

        <licenses>
                <license>
                        <name>GPL-3</name>
                        <url>LICENSE.txt</url>
                </license>
        </licenses>

        <scm>
                <tag>HEAD</tag>
                <connection>scm:git:git://networld.to/var/scm/ai/scrawler.git</connection>
                <developerConnection>scm:git:ssh://${env.USER}@networld.to:64446/var/scm/ai/scrawler.git</developerConnection>
        </scm>

        <developers>
                <developer>
                        <id>Alex Oberhauser</id>
                        <name>Alex Oberhauser</name>
                        <email>oberhauseralex@networld.to</email>
                        <url>http://devnull.networld.to/foaf.rdf#me</url>
                        <organization>Networld</organization>
                        <organizationUrl>http://networld.to</organizationUrl>
                        <roles>
                                <role>architect</role>
                                <role>developer</role>
                        </roles>
                </developer>
        </developers>

        <reporting>
                <outputDirectory>target/site</outputDirectory>
        </reporting>

        <repositories>
                <repository>
                        <id>jena-repo</id>
                        <url>http://openjena.org/repo</url>
                </repository>
                <repository>
                        <id>jena-repo-dev</id>
                        <url>http://openjena.org/repo-dev</url>
                </repository>
        </repositories>

        <dependencies>
                <dependency>
                        <groupId>junit</groupId>
                        <artifactId>junit</artifactId>
                        <version>4.0</version>
                        <type>jar</type>
                        <scope>test</scope>
                        <optional>true</optional>
                </dependency>
                <dependency>
                        <groupId>com.hp.hpl.jena</groupId>
                        <artifactId>jena</artifactId>
                        <version>2.6.3</version>
                </dependency>
                <dependency>
                        <groupId>com.hp.hpl.jena</groupId>
                        <artifactId>arq</artifactId>
                        <version>2.8.4</version>
                </dependency>
                <dependency>
                        <groupId>log4j</groupId>
                        <artifactId>log4j</artifactId>
                        <version>1.2.13</version>
                </dependency>
        </dependencies>

        <build>
                <plugins>
                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-compiler-plugin</artifactId>
                                <version>2.0.2</version>
                                <configuration>
                                        <source>1.6</source>
                                        <target>1.6</target>
                                </configuration>
                        </plugin>
                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-scm-plugin</artifactId>
                                <version>1.3</version>
                                <configuration>
                                        <connectionType>developerConnection</connectionType>
                                </configuration>
                                <dependencies>
                                        <dependency>
                                                <groupId>org.apache.maven.scm</groupId>
                                                <artifactId>maven-scm-provider-gitexe</artifactId>
                                                <version>1.3</version>
                                        </dependency>
                                </dependencies>
                        </plugin>
                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-javadoc-plugin</artifactId>
                                <version>2.6</version>
                                <executions>
                                        <execution>
                                                <id>javadoc-jar</id>
                                                <!--<phase>package</phase>-->
                                                <goals>
                                                        <goal>jar</goal>
                                                </goals>
                                        </execution>
                                </executions>
                        </plugin>
                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-source-plugin</artifactId>
                                <executions>
                                        <execution>
                                                <id>attach-sources</id>
                                                <goals>
                                                        <goal>jar</goal>
                                                </goals>
                                        </execution>
                                </executions>
                        </plugin>

                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-jar-plugin</artifactId>
                                <configuration>
                                        <archive>
                                                <manifest>
                                                        <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                                        <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                                                </manifest>
                                                <manifestEntries>
                                                        <mode>development</mode>
                                                        <url>${pom.url}</url>
                                                </manifestEntries>
                                        </archive>
                                </configuration>
                        </plugin>

                </plugins>
        </build>

</project>
